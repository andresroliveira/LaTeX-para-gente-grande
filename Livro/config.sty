    activate={true,nocompatibility},
    final,
    tracking=true,
    kerning=true,
    spacing=true,
    factor=1100,
    stretch=10,
    shrink=10
]{microtype}   % Better typography

\usepackage[brazilian]{babel} % language
\addto\captionsbrazilian{\renewcommand{\contentsname}{Conteúdo}}

\usepackage{float} % Add floating figures
